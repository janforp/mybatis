<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.submitted.cachetwotest.TeacherMapper">

    <select id="getUser" resultType="org.apache.ibatis.submitted.cachetwotest.Teacher">
        select *
        from teachers
        where id = #{id}
    </select>

    <insert id="insert">
        insert into teachers
        values (#{id}, #{name})
    </insert>

    <update id="update">
        update teachers
        set name = #{name}
        where id = #{id}
    </update>

</mapper>
